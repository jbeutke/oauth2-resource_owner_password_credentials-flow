<% include partials/header %>
<!--Stepper from Codepen: https://codepen.io/thdeux/pen/zBGNrM-->
<div class="md-stepper-horizontal orange">
    <div class="md-step">
        <div class="md-step-circle"><span>1</span></div>
        <div class="md-step-title">Get the access token</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
    </div>
    <div class="md-step active">
        <div class="md-step-circle"><span>2</span></div>
        <div class="md-step-title">Calling the API</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                The Access Token
            </div>
            <form action="/call/protected/api" method="POST">
                <div class="card-body">
                    <p class="card-text">This is your access token:</p>
                    <pre class="language-json"><%= token %></pre>
                    <input type="hidden" name="token" value="<%=token %>" />
                    <p class="card-text">You can now call the protected API.</p>
                    <div class="text-center">
                        <input type="submit" class="btn btn-primary" value="Call protected API" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>

<% include partials/footer %>

</body>

</html>
